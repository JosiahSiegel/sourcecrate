{
  "name": "sourcecrate",
  "version": "1.0.0",
  "description": "Academic paper search that runs entirely in your browser",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "dev": "node dev-server.js"
  },
  "keywords": [
    "academic",
    "research",
    "papers",
    "search",
    "browser",
    "client-side"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^20.0.2",
    "jsdom": "^27.0.0",
    "msw": "^2.11.5",
    "vitest": "^3.2.4"
  }
}
